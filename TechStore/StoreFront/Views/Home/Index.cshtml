@model IEnumerable<StoreFront.Model.ProductViewModel>

<div class="container mt-4">
     <div class="d-flex justify-content-between align-items-center mb-4">
          <h1>PadEvent  Inventory</h1>

          <form asp-action="SetWarehouse" method="post" class="d-flex gap-2">
               <select name="warehouse" class="form-select" onchange="this.form.submit()">
                    <option value="warehouse-a" selected="@(ViewBag.CurrentWarehouse == "warehouse-a")">Warehouse A (NYC)</option>
                    <option value="warehouse-b" selected="@(ViewBag.CurrentWarehouse == "warehouse-b")">Warehouse B (London)</option>
                    <option value="warehouse-c" selected="@(ViewBag.CurrentWarehouse == "warehouse-c")">Warehouse C (Tokyo)</option>
               </select>
          </form>
     </div>

     <a asp-action="Create" class="btn btn-primary mb-3">Create New Product</a>

     <table class="table table-bordered table-striped">
          <thead>
               <tr>
                    <th>Name</th>
                    <th>Price</th>
               </tr>
          </thead>
          <tbody>
               @foreach (var item in Model)
               {
                    <tr>
                         <td>@item.Name</td>
                         <td>$@item.Price</td>
                         <td>
                              <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                              <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</a>
                         </td>
                    </tr>
               }
          </tbody>
     </table>
</div>